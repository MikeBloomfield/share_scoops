.header
	&--active
		padding: 0
		.header__menu
			border-radius: 0 0 20px 20px
			background-color: rgba(10, 33, 56, .5)
			padding: 20px 20px 10px 20px
			backdrop-filter: blur(10px)
			margin-right: -40px
		.header__logo
			border-radius: 0 0 20px 20px
			background-color: rgba(10, 33, 56, .5)
			backdrop-filter: blur(10px)
			padding: 20px 20px 10px 20px
			margin-left: -40px
	width 100%
	min-width $min-width
	padding-top 50px
	padding-bottom 70px
	position: fixed
	z-index 999
	transition: $default-transition
	&__logo
		position relative
		z-index 999
		transition: $default-transition
		a
			img
				transition: $default-transition
	&__container
		display flex
		justify-content: space-between
	&__menu
		display flex
		justify-content: flex-end
		transition: $default-transition
		gap: 20px
		position relative
		z-index 999
		&-span
			transition: .3s
			font-weight: 500;
			font-size: 20px;
			line-height: 24px;
			text-align: right;
			color: #FFFFFF
	&__burger
		width: 47px
		height: 26px
		position relative
		cursor: pointer
		transition: .3s
		z-index 999
		display flex
		justify-content: center
		&:hover
			opacity: .6
		&-line
			display block
			background: #fff
			width: 100%
			height: 2px
			position absolute
			transition: .4s
			&:nth-child(1)
				top: 0
			&:nth-child(2)
				top:50%
				transform: translateY(-50%)
			&:nth-child(3)
				top:50%
				transform: translateY(-50%)
			&:nth-child(4)
				width: 50%
				bottom: 0
				right: 0
		&-active
			.header__burger-line
				&:first-child
					width: 0%
					opacity 0
				&:nth-child(2)
					transform: translateY(-50%) rotate(45deg)
				&:nth-child(3)
					transform: translateY(-50%) rotate(-45deg) !important
				&:last-child
					width: 0%
					opacity 0
					right: 50%
				


.fadein
	animation: fadein .8s ease 
	animation-delay: .5s
	animation-fill-mode: forwards

.overflow
	overflow: hidden



.mobile
	display flex
	justify-content: center
	align-items: center
	transition: .5s
	transform: translateX(100%)
	position: fixed
	z-index 100
	width: 100vw
	height: 100vh
	background: url(../img/main/mobile-bg.svg) 0 0/ 100% 100% no-repeat #0A2138
	&.show
		transform: translate(0, -69px)
	&__left
		width: 60%
		opacity 0
	&__right
		opacity 0
	&__social
		display flex
		justify-content: flex-start
		&-item
			transition: .3s
			&:hover
				transform: translateY(-5px) rotate(10deg) scale(1.2)
			&:not(:last-of-type)
				margin-right 20px
	&__email
		font-weight: 500;
		font-size: 20px;
		line-height: 40px;
		color: #FFFFFF;
		margin-top 40px
		margin-bottom 25px
		display inline-block
		transition: .3s
		&:hover
			color: hsl(0, 0%, 70%)
	&__list
		display flex
		justify-content: space-between
		flex-wrap: wrap
		margin-top 45px
		&-item
			width 248px
			margin-bottom 30px
		&-link
			font-weight: 500;
			font-size: 20px;
			line-height: 30px;
			color: #FFFFFF;
			transition: .3s
			position relative
			&:before
				content: ""
				bottom: -3px
				position absolute
				left: 0
				right: 0
				height: 1px
				transform: scaleX(0)
				transition transform .3s ease,transform-origin 0s
				transform-origin: right center
				background-color: #fff
			&:hover
				&:before
					transform: scaleX(1)
					transform-origin: left center
	&__title
		font-weight: 700;
		font-size: 20px;
		line-height: 30px;
		color: #FFFFFF;
	&__container
		display flex
		justify-content: space-between
		&-bottom
			max-width: 900px
			display flex
			justify-content: space-between
	&__cross
		width: 48px
		position: relative
		cursor: pointer
		transition: .3s
		&:hover
			opacity: .6
		&-item
			display block
			width: 100%
			height: 2px
			background-color: #fff
			display block
			position absolute
			top: 50%
			&:first-child
				transform: rotate(45deg)
			
			&:last-child
				transform: rotate(-45deg)





@keyframes fadein {
	
	0% {
		opacity 0
		transform: translateY(30%)
		}
	
	100% {
		opacity 1
		transform: translateY(0)
		}
	
	}